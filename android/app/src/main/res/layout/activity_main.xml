<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.dankstudio.www.tracerecord.MainActivity">

    <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
    />
    <Button
            android:text="连接"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" android:layout_marginStart="15dp" android:layout_marginBottom="20dp"
            android:id="@+id/switcher"/>
    <Button
            android:text="切换方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignBottom="@+id/switcher"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_marginRight="13dp" android:layout_marginEnd="13dp" android:id="@+id/mode"/>
    <Button
            android:text="填写信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/switcher" android:layout_alignEnd="@+id/switcher"
            android:layout_marginTop="12dp" android:id="@+id/info"/>
    <TextView
            android:text="行程情况"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" android:id="@+id/textView2" android:background="@android:color/darker_gray"
            android:paddingBottom="20dp" android:paddingEnd="20dp" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:paddingStart="20dp" android:paddingTop="20dp"
            android:textColor="@android:color/background_light"/>
    <Button
            android:text="帮助"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignTop="@+id/info"
            android:layout_alignRight="@+id/mode" android:layout_alignEnd="@+id/mode" android:id="@+id/help"/>
    <Switch
            android:text="自动识别 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recognition_switch"
            android:layout_alignBaseline="@+id/switcher" android:layout_alignBottom="@+id/switcher"
            android:layout_centerHorizontal="true" tools:background="?android:attr/colorButtonNormal"
            android:padding="8dp"/>
</RelativeLayout>
